<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="edu.rice.cs.hpc"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.rice.cs.hpc.viewer.framework.HPCViewer">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.rice.cs.hpc.viewer.framework.Perspective"
            icon="icons/hpc-16x16.png"
            id="edu.rice.cs.hpc.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="hpcviewer"
            class="edu.rice.cs.hpc.viewer.scope.ScopeView"
            icon="icons/cct.png"
            id="edu.rice.cs.hpc.scope.ScopeView"
            name="ScopeView">
      </view>
      <view
            category="hpcviewer"
            class="edu.rice.cs.hpc.viewer.scope.FlatScopeView"
            icon="icons/flat.png"
            id="edu.rice.cs.hpc.viewer.scope.FlatScopeView"
            name="FlatScopeView">
      </view>
      <view
            category="hpcviewer"
            class="edu.rice.cs.hpc.viewer.scope.CallerScopeView"
            icon="icons/caller.png"
            id="edu.rice.cs.hpc.viewer.scope.CallerScopeView"
            name="CallerView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="edu.rice.cs.hpc.actionSet"
            label="Database"
            visible="true">
            <menu
               id="DebugMenu"
               label="&amp;Debug">
            	<separator
                  name="debugGroup">
            	</separator>
         	</menu>
            <menu
               id="FileMenu"
               label="&amp;File">
            	<separator
                  name="databaseGroup">
            	</separator>
             <separator
                   name="PreferenceGroup">
             </separator>
             <separator
                   name="ExitGroup">
             </separator>
         	</menu>
         <action
               class="edu.rice.cs.hpc.viewer.actions.DisplayExperiment"
               id="edu.rice.cs.hpc.viewer.actions.DisplayExperiment"
               label="&amp;Display a database&apos;s raw XML"
               menubarPath="DebugMenu/debuggingGroup">
         </action>
         <action
               class="edu.rice.cs.hpc.viewer.actions.LoadExperiment"
               id="edu.rice.cs.hpc.viewer.actions.LoadExperiment"
               label="&amp;Open database..."
               menubarPath="FileMenu/databaseGroup">
         </action>
         <action
               class="edu.rice.cs.hpc.viewer.actions.NewWindow"
               id="edu.rice.cs.hpc.viewer.actions.NewWindow"
               label="&amp;New Window"
               menubarPath="FileMenu/databaseGroup">
         </action>
         <action
               class="edu.rice.cs.hpc.viewer.actions.Preferences"
               id="edu.rice.cs.hpc.viewer.actions.preferences"
               label="Preferences..."
               menubarPath="FileMenu/PreferenceGroup">
         </action>
         <action
               class="edu.rice.cs.hpc.viewer.actions.Quit"
               id="edu.rice.cs.hpc.viewer.actions.Quit"
               label="&amp;Exit"
               menubarPath="FileMenu/ExitGroup">
         </action>
      </actionSet>
   </extension>
   <extension
         id="hpcviewer"
         point="org.eclipse.core.runtime.products">
      <product
            application="edu.rice.cs.hpc"
            name="hpcviewer">
         <property
               name="appName"
               value="hpcviewer">
         </property>
         <property
               name="aboutImage"
               value="/edu.rice.cs.hpc/icons/hpcviewer128.gif">
         </property>
         <property
               name="aboutText"
               value="HPCViewer is a user interface for analyzing a database of &#x0A;performance metrics in conjunction with source code. &#x0A;&#x0A;HPCViewer is part of Rice University&apos;s HPCToolkit project, &#x0A;and supported by the Center for Scalable Application Development Software (CScAD).&#x0A;&#x0A;(C) Copyright 2007, Rice University">
         </property>
         <property
               name="windowImages"
               value="/edu.rice.cs.hpc/icons/hpc-16x16.gif,/edu.rice.cs.hpc/icons/hpc-32x32.gif,/edu.rice.cs.hpc/icons/hpcviewer64.gif,/edu.rice.cs.hpc/icons/hpcviewer128.gif">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
      point="org.eclipse.ui.editors">
	   <editor
          class="edu.rice.cs.hpc.viewer.util.SourceCodeEditor"
          default="true"
          extensions="*"
          icon="icons/hpc-16x16.png"
          id="edu.rice.cs.hpc.viewer.util.SourceCodeEditor"
          name="Source Code Editor">
   		</editor>
    <editor
          class="edu.rice.cs.hpc.viewer.help.HTMLEditor"
          icon="icons/hpc-merged-16x16.png"
          id="edu.rice.cs.hpc.viewer.util.HTMLEditor"
          name="Web editor">
    </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="edu.rice.cs.hpc.viewer.util.PreferencePage"
            id="edu.rice.cs.hpc.viewer.util.PreferencePage"
            name="hpcviewer Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="edu.rice.cs.hpc.viewer.util.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
