<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>
   <extension
         id="edu.rice.cs.hpc"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.rice.cs.hpc.HPCViewer">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.rice.cs.hpc.Perspective"
            icon="icons/hpc-16x16.png"
            id="edu.rice.cs.hpc.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="hpcviewer"
            class="edu.rice.cs.hpc.viewer.scope.ScopeView"
            icon="icons/hpc-16x16.png"
            id="edu.rice.cs.hpc.scope.ScopeView"
            name="ScopeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="edu.rice.cs.hpc.actionSet"
            label="Experiment"
            visible="true">
            <menu
               id="experimentMenu"
               label="&amp;Experiment">
            	<separator
                  name="experimentGroup">
            	</separator>
         	</menu>
         <action
               class="edu.rice.cs.hpc.viewer.actions.MergeExperiment"
               icon="icons/hpc-merged-16x16.png"
               id="edu.rice.cs.hpc.viewer.actions.MergeExperiment"
               label="&amp;Merge experiments"
               menubarPath="experimentMenu/experimentGroup"
               toolbarPath="experimentGroup"
               tooltip="Merge 2 experiment files">
         </action>
         <action
               class="edu.rice.cs.hpc.viewer.actions.DisplayExperiment"
               icon="icons/xml.png"
               id="edu.rice.cs.hpc.viewer.actions.DisplayExperiment"
               label="&amp;Display experiment"
               menubarPath="experimentMenu/experimentGroup"
               toolbarPath="experimentGroup"
               tooltip="Display the XML content of the experiment">
         </action>
            
         <action
               class="edu.rice.cs.hpc.viewer.actions.LoadExperiment"
               icon="icons/hpc-16x16.png"
               id="edu.rice.cs.hpc.viewer.actions.LoadExperiment"
               label="&amp;Load experiment ..."
               menubarPath="experimentMenu/experimentGroup"
               toolbarPath="experimentGroup"
               tooltip="Load an XML experiment file ...">
         </action>
      </actionSet>
   </extension>
   <extension
         id="hpcviewer"
         point="org.eclipse.core.runtime.products">
      <product
            application="edu.rice.cs.hpc"
            name="hpcviewer">
         <property
               name="appName"
               value="hpcviewer">
         </property>
         <property
               name="aboutImage"
               value="icons/hpcviewerEclipse128.gif">
         </property>
         <property
               name="aboutText"
               value="hpcviewer is a user interface for analyzing a database of   &#x0A;performance metrics in conjunction with an application&apos;s source code.&#x0A;&#x0A;hpcviewer is part of Rice University&apos;s HPCToolkit project.  Development of &#x0A;HPCToolkit is principally funded by the Department of Energy&apos;s Office of &#x0A;Science as part of the SciDAC Center for Scalable Application Development&#x0A;Software and the Performance Engineering Research Institute.&#x0A;&#x0A;(C) Copyright 2007, Rice University">
         </property>
         <property
               name="windowImages"
               value="icons/hpcviewerEclipse16.gif,icons/hpcviewerEclipse32.gif,icons/hpcviewerEclipse48.gif,icons/hpcviewerEclipse64.gif,icons/hpcviewerEclipse128.gif">
         </property>
      </product>
   </extension>
   <extension
      point="org.eclipse.ui.editors">
	   <editor
          class="edu.rice.cs.hpc.viewer.util.SourceCodeEditor"
          default="true"
          extensions="*"
          icon="icons/hpc-16x16.gif"
          id="edu.rice.cs.hpc.viewer.util.SourceCodeEditor"
          name="Source Code Editor">
   		</editor>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="edu.rice.cs.hpc.splashHandlers.BrowserSplashHandler"
            id="edu.rice.cs.hpc.splashHandlers.browser">
      </splashHandler>
      <splashHandler
            class="edu.rice.cs.hpc.splashHandlers.ExtensibleSplashHandler"
            id="edu.rice.cs.hpc.splashHandlers.extensible">
      </splashHandler>
   </extension>
</plugin>
